{
  "name": "Panda",
  "version": "1.2.0",
  "description": "Support the drag and drop folder compression.",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leibnizli/panda.git"
  },
  "author": "leibnizli",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/leibnizli/panda/issues"
  },
  "homepage": "https://github.com/leibnizli/panda#readme",
  "build": {
    "appId": "dev.arayofsunshine.panda",
    "mac": {
      "category": "tool",
      "target": {
        "target": "default",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    },
    "asar": true
  },
  "scripts": {
    "dev": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "pack": "rm -rf ./dist && electron-builder --dir",
    "dist": "rm -rf ./dist && electron-builder",
    "clean": "rm -rf ./out",
    "clean-dist": "rm -rf ./dist",
    "start": "electron-forge start",
    "package": "rm -rf ./out && electron-forge package",
    "make": "rm -rf ./out && export $(cat .env | xargs) && electron-forge make",
    "publish": "electron-forge publish"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-dmg": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/publisher-github": "^7.2.0",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "17.1.2",
    "electron-squirrel-startup": "^1.0.0"
  },
  "dependencies": {
    "font-carrier": "^0.3.1",
    "update-electron-app": "^3.0.0"
  }
}
